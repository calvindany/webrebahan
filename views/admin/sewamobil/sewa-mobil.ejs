        <%- include('../include/header.ejs') %>
        <link rel="stylesheet" href="/css/adminRoot.css">
    </head>

    <body>
        <%- include('../include/navigation.ejs') %>
        <section class="row custom-padding">
            <h3 class="my-4">Daftar Mobil</h3>
        </section>
        
        <section class="row d-flex justify-content-end custom-padding mb-4">
            <a type="button" class="btn btn-primary col-1" href="/admin/tambahsewamobil">Tambah</a>
        </section>

        <section class="custom-padding">
            <table class="table table-md">
                <tr>
                    <th class="col-xl-4">Mobil</th>
                    <th class="col-xl-2">Harga</th>
                    <th class="col-xl-2">Kapasitas</th>
                    <th class="col-xl-2">Driver</th>
                    <th class="col-xl-2 text-center">Action</th>
                </tr>

                <% for(let i = 0; i < mobil.length; i++){ %>
                    <tr>
                        <td><%= mobil[i].mobil %></td>
                        <td><%= mobil[i].harga %></td>
                        <td><%= mobil[i].kapasitas %></td>
                        <td><%= mobil[i].driver %></td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/editmobil/<%= mobil[i]._id %>" class="btn"><i class="bi bi-pencil-square fs-3" style="color: blue;"></i></a>
                            <form action="/admin/hapusmobil" method="POST" >
                                <input type="hidden" name="idmobil" value="<%= mobil[i]._id %>">
                                <button type="submit" class="btn"><i class="bi bi-trash fs-3" style="color: red"></i></button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </table>
        </section>
        <%- include('../include/footer.ejs') %>